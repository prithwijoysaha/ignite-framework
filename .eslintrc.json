{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": ["airbnb-base", "prettier", "plugin:jest/recommended", "plugin:jsdoc/recommended"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},

	"rules": {
		"jsdoc/check-tag-names": ["error", { "definedTags": ["swagger", "openapi"] }],
		"import/extensions": ["error", "ignorePackages"]
	}
}
